{
  "exclude": ["node_modules/"],
  "sourceMaps": "inline",
  "module": {
    "type": "nodenext"
  },
  "jsc": {
    "loose": true,
    "target": "esnext",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "decoratorsBeforeExport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  }
}
